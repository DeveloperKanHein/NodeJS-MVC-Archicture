<%- include('partials/header'); %>

</head>
<body>
    <%- include('partials/loading'); %>
    <!---------------------------- add question -----------------------------------------> 


    <section class="main">

        <%- include('partials/menu_bar'); %>

        <!---------------------------- content  ----------------------------------------->
        <article class="content min-vh-100">
            <%- include('partials/check_message'); %>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin/course">Course</a></li>
                <li class="breadcrumb-item"><a href="/admin/units/<%= unit.courseId %>">Units</a></li>
                <li class="breadcrumb-item"><a href="/admin/unit-detail/<%= unit._id %>"><%= unit.title %></a></li>
                <li class="breadcrumb-item"><a href="/admin/quiz/<%= unit._id %>">Quiz</a></li>
                <li class="breadcrumb-item"><a href="/admin/sentence-arrange/<%= unit._id %>">Sentence Arrange</a></li>
                <li class="breadcrumb-item active" aria-current="page">Detail</li>
                </ol>
            </nav>
            <div class="unit-card card mx-auto p-4">
                <h5 class="text-center mb-3">Edit Sentence Arrange</h5>
                <form action="/admin/update-sentence-arrange" method="post" onsubmit="showLoading();">
                    <div class="input-group-sm mb-3 shadow-sm">
                        <label for="audio_sentence" class="form-label mb-1 fw-medium"><small>Add Question</small></label>
                        <input type="text" name="answerSentence" value="<%= sentenceArrange.answerSentence %>" class="form-control" id="audio_sentence" required>
                    </div>
                    <!-- <div class="w-100">
                        <audio controls class="w-100">
                            <source src="<%= sentenceArrange.answerSentence %>" type="audio/ogg">
                            <source src="<%= sentenceArrange.answerSentence %>" type="audio/mpeg">
                          Your browser does not support the audio element.
                        </audio>
                    </div>
                    <div class="mb-3 input-group-sm">
                        <label for="upload_audio" class="form-label fw-medium mb-1"><small>Upload Audio</small></label>
                        <input type="file" name="audio" class="form-control" id="upload_audio" accept="audio/*">
                    </div> -->
                    <div class="input-group-sm mb-3 shadow-sm">
                        <label for="correct_answer" class="form-label mb-1 fw-medium"><small>Add Correct Answer</small></label>
                        <input type="text" name="correctAnswer" value="<%= sentenceArrange.correctAnswer %>" class="form-control" id="correct_answer" required>
                    </div>
                    <div class="input-group-sm mb-3 shadow-sm">
                        <label for="mixing_sentence" class="form-label mb-1 fw-medium"><small>Add Question Sentence</small></label>
                        <input type="text" name="mixSentence" value="<%= sentenceArrange.mixSentence %>" class="form-control" id="mixing_sentence" required>
                    </div>
                    <input type="hidden" name="unitId" value="<%= unitId %>" >
                    <input type="hidden" name="index" value="<%= index %>" >
                    <div class="d-flex justify-content-end align-items-center mt-2">
                        <input type="submit" class="btn btn-sm btn-success" value="Update">
                    </div>
                </form>
            </div>
       </article>

        <%- include('partials/footer'); %>

    </section>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.4/jquery.min.js" integrity="sha512-pumBsjNRGGqkPzKHndZMaAG+bir374sORyzM3uulLV14lN5LyykqNk8eEeUlUkB3U0M4FApyaHraT65ihJhDpQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="/js/all.js"></script>
    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
        
        let addQues = document.querySelector('#add_question'),
            editBtn = document.querySelector('#edit_btn'),
            craeteQues = document.querySelector('#create_question'),
            cancelBtn = document.querySelector('#cancel_btn');

        addQues.addEventListener('click', () => {
            craeteQues.classList.remove('d-none');
        });

        editBtn.addEventListener('click', () => {
            craeteQues.classList.remove('d-none');
        });

        cancelBtn.addEventListener('click', () => {
            craeteQues.classList.add('d-none');
        })

    </script>
</body>
</html>