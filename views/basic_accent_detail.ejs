<%- include('partials/header'); %>

</head>
<body>
    <%- include('partials/loading'); %>
    <!---------------------------- add unit -----------------------------------------> 
    <div class="create min-vh-100 w-100 position-fixed top-0 d-flex justify-content-center align-items-center fadeIn d-none" id="create_unit">
        <div class="new-content rounded py-4 px-3 shadow-sm">
            <h5 class="text-center mb-3">Edit Basic Accent</h5>
            <form action="/admin/update-basic-accent" method="post" enctype="multipart/form-data" onsubmit="showLoading()">
                <div class="mb-3 input-group-sm shadow-sm">
                    <label for="instruction" class="form-label fw-medium mb-1"><small>Instruction</small></label>
                    <input type="text" name="instruction" value="<%= basicAccent.instruction %>" class="form-control" placeholder="Add Instruction" id="instruction" required>
                </div>

                <div class="mb-3 input-group-sm shadow-sm">
                    <label for="paragraph" class="form-label fw-medium mb-1"><small>Paragraph</small></label>
                    <textarea name="paragraph" id="paragraph" rows="3" placeholder="Add Paragraph" class="form-control" required><%= basicAccent.paragraph %></textarea>
                </div>
            
                <div class="mb-3 input-group-sm shadow-sm">
                    <label for="upload_audio" class="form-label fw-medium mb-1"><small>Upload Audio</small></label>
                    <input type="file" name="audio" class="form-control" id="upload_audio" accept="audio/*">
                </div>

                <div class="mb-3 input-group-sm shadow-sm">
                    <label for="upload_photo" class="form-label fw-medium mb-1"><small>Upload Photo</small></label>
                    <input type="file" name="photo" class="form-control" id="upload_photo" accept="image/*">
                </div>

                <input type="hidden" name="index" value="<%= index %>" >
                <div class="d-flex justify-content-end align-items-center">
                    <div class="btn btn-sm btn-danger me-2" id="cancel_btn">Cancel</div>
                    <input type="submit" class="btn btn-sm btn-success" name="Create" value="Update">
                </div>
            </form>
        </div>
    </div>

    <section class="main">

        <%- include('partials/menu_bar'); %>

        <!---------------------------- content  ----------------------------------------->
        <article class="content min-vh-100">
            <%- include('partials/check_message'); %>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item"><a href="/admin/course">Course</a></li>
                  <li class="breadcrumb-item"><a href="/admin/basic-accent">Basic Accent</a></li>
                  <li class="breadcrumb-item active" aria-current="page">Detail</li>
                </ol>
            </nav>
            <div class="mt-3">
                <div class="unit-card card mx-auto">
                    <div class="text-end"><div class="btn" id="edit_btn"><i class="bi bi-pencil-square"></i></div></div>
                    <div class="card-body pt-0">

                        <h5 class="text-center text-primary m-0 p-0">Basic Accent</h5>
                        <div class="mt-2">
                            <small class="fw-medium"><%= basicAccent.instruction %></small>
                        </div>

                        <p class="mt-2"><%= basicAccent.paragraph %></p>
                        <audio controls class="w-100 mt-2">
                            <source src='<%= basicAccent.audioLink %>' type="audio/mp3">
                            <source src='<%= basicAccent.audioLink %>' type="audio/ogg">
                            <source src='<%= basicAccent.audioLink %>' type="audio/mpeg">
                            Your browser does not support the audio tag.
                        </audio>

                        <img class="w-100 mt-2" src="<%= basicAccent.photoLink %>" alt="Your browser does not support">
                        
                    </div>
                </div>
            </div>
        </article>

        <%- include('partials/footer'); %>

    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/all.js"></script>
    <script>

        let editBtn = document.querySelector('#edit_btn'),
            createUnit = document.querySelector('#create_unit'),
            cancelBtn = document.querySelector('#cancel_btn');

        editBtn.addEventListener('click', () => {
            createUnit.classList.remove('d-none');
        });

        cancelBtn.addEventListener('click', () => {
            createUnit.classList.add('d-none');
        })

    </script>
</body>
</html>